<AuthorizeView Policy="@ApplicationPolicies.CanDeleteBroker" Resource="Broker">
    @if (Broker.HousingCount != null & Broker.HousingCount <= 0)
    {
        <ConfirmButton Title="Radera" Body="Det är inte möjligt att ångra en radering av en mäklare. Vill du radera?" ButtonText="Radera" OnDialogButtonClicked="OnConfirmDeleteBrokerEventHandler"></ConfirmButton>
    }
    else
    {
        <CantDeleteBrokerMessage Title="Det har uppstått ett problem" Body="Denna mäklare har ansvar över aktiva husförsäljningar och går därför inte att ta bort"></CantDeleteBrokerMessage>
    
    }
</AuthorizeView>

@page "/"
@* 
<!-- Author: Jimmie -->
<!-- Co Authors: --> 
*@
<PageTitle>Home</PageTitle>

<div class="vertical-page-container">
    <div class="card vertical-page-section w-100 p-3">
        <div class="card-header w-100">
            <h1>Sök bostäder</h1>
        </div>
        <EditForm Model="HousingSearchFormInput" OnValidSubmit="@(() => SearchHousings())">
            <div class="d-flex flex-column gap-3">
                <div class="d-flex flex-column">   
                    <label>Kategori</label>
                    <InputSelect @bind-Value="HousingSearchFormInput.SelectedCategoryId">
                        @foreach (var category in HousingSearchFormInput.HousingCategories)
                        {
                            <option value="@category.HousingCategoryId">@category.CategoryName</option>
                        }
                    </InputSelect>
                </div>
                <div class="d-flex flex-column">   
                    <label>Kommun</label>
                    <InputSelect @bind-Value="HousingSearchFormInput.SelectedMunicipalityId">
                        @foreach (var municipality in HousingSearchFormInput.Municipalities)
                        {
                            <option value="@municipality.MunicipalityId">@municipality.MunicipalityName</option>
                        }
                    </InputSelect>
                </div>
                <div class="d-flex flex-row gap-2">
                    <div class="d-flex flex-column">   
                        <label>Min pris</label>
                        <InputNumber @bind-Value="HousingSearchFormInput.MinPrice"></InputNumber>
                    </div>
                    <div class="d-flex flex-column">   
                        <label>Max pris</label>
                        <InputNumber @bind-Value="HousingSearchFormInput.MaxPrice"></InputNumber>
                    </div>
                </div>
                <div class="d-flex flex-row gap-2">
                    <div class="d-flex flex-column">   
                        <label>Min yta</label>
                        <InputNumber @bind-Value="HousingSearchFormInput.MinLivingArea"></InputNumber>
                    </div>
                    <div class="d-flex flex-column">   
                        <label>Max yta</label>
                        <InputNumber @bind-Value="HousingSearchFormInput.MaxLivingArea"></InputNumber>
                    </div>
                </div>
                <div class="d-flex flex-column">   
                    <label>Resultat per sida</label>
                    <InputSelect @bind-Value="HousingSearchFormInput.NumberOfResultsPerPage">
                        <option value="25">25</option>
                        <option value="50">50</option>
                        <option value="75">75</option>
                        <option value="100">100</option>
                    </InputSelect>
                </div>
                <div class="d-flex flex-row justify-content-center">
                    <button>Sök</button>    
                </div>                
            </div>
        </EditForm>       
    </div
    @if (HousingSearchResult != null)
    {
        <FribergFastigheter.Client.Components.HousingSearchResultList SearchResult="HousingSearchResult" />
        
        @if (HousingSearchResult.Pagination != null)
        {
            <div class="d-flex flex-row gap-3">
                @for (int i = 1; i <= HousingSearchResult.Pagination.NumberOfRequestablePages; i++)
                {
                    @if (HousingSearchResult.Pagination.CurrentPage == i)
                    {
                        <span class="fw-bold fs-5" >@i</span>
                    }
                    else
                    {
                        // Is needed due to how lambda works
                        int pageNumber = i;
                        <span @onclick="@(() => SearchHousings(pageNumber))">@i</span>
                    }
                    
                }
            </div>
        }    
    }
    else if (_haveSearchedHousings)
    {
        <p class="text-center">Inga bostäder hittades.</p>
    }
</div>

